
@{
    ViewBag.Title = WebStore.Resources.Titles.Tickets;
}

<section>
    <header class="header">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h1>
                        @ViewBag.Title
                    </h1>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <ul class="breadcrumbs">
                        <li>
                            <a href="@Url.Action("Index","Home", new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName}, null)">@WebStore.Resources.Titles.Home</a>
                        </li>
                        <li class="separator">&nbsp;</li>
                        <li>
                            <a href="@Url.Action("Home","Account", new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName}, null)">@WebStore.Resources.Titles.Account</a>
                        </li>
                        <li class="separator">&nbsp;</li>
                        <li>
                            @ViewBag.Title
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
</section>

@{ Html.RenderAction("ProfileMenu", "Menu", new { childAction = true }); }

<div class="container mb-5">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Ticket Subject</th>
                    <th>Date Submitted | Updated</th>
                    <th>Type</th>
                    <th>Priority</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><a class="navi-link" href="@Url.Action("Tickets","Account", new { id = 14787, language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName})">My new ticket</a></td>
                    <td>08/08/2017 | 08/14/2017</td>
                    <td>Website problem</td>
                    <td><span class="text-warning">High</span></td>
                    <td><span class="text-primary">Open</span></td>
                </tr>
                <tr>
                    <td><a class="navi-link" href="@Url.Action("Tickets","Account", new { id = 14787, language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName})">Another ticket</a></td>
                    <td>07/21/2017 | 07/23/2017</td>
                    <td>Partner request</td>
                    <td><span class="text-info">Medium</span></td>
                    <td><span class="text-muted">Closed</span></td>
                </tr>
                <tr>
                    <td><a class="navi-link" href="@Url.Action("Tickets","Account", new { id = 19787, language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName})">Yet another ticket</a></td>
                    <td>05/19/2017 | 05/20/2017</td>
                    <td>Complaint</td>
                    <td><span class="text-danger">Urgent</span></td>
                    <td><span class="text-muted">Closed</span></td>
                </tr>
                <tr>
                    <td><a class="navi-link" href="@Url.Action("Tickets","Account", new { id = 24787, language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName})">My old ticket</a></td>
                    <td>05/19/2017 | 05/20/2017</td>
                    <td>Info inquiry</td>
                    <td><span class="text-success">Low</span></td>
                    <td><span class="text-muted">Closed</span></td>
                </tr>
            </tbody>
        </table>
    </div>
    <hr class="mb-4">
    <div class="text-right">
        <button class="btn btn-orangered margin-bottom-none" data-toggle="modal" data-target="#openTicket">@WebStore.Resources.Buttons.NewTicket</button>
    </div>
</div>

<form class="modal fade" method="post" id="openTicket" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@WebStore.Resources.Titles.SendTicket</h4>
                <div class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></div>
            </div>
            <div class="modal-body">
                <p class="text-muted">We normally respond tickets within 2 business days.</p>
                <div class="form-group">
                    <label for="ticket-subject">@WebStore.Resources.Placeholder.Subject</label>
                    <input class="form-control" type="text" id="ticket-subject" required="" placeholder="@WebStore.Resources.Placeholder.Subject">
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="ticket-type">@WebStore.Resources.Placeholder.Type</label>
                            <select class="form-control" id="ticket-type">
                                <option>@WebStore.Resources.Placeholder.CType</option>
                                <option>@WebStore.Resources.Placeholder.WType</option>
                                <option>@WebStore.Resources.Placeholder.RType</option>
                                <option>@WebStore.Resources.Placeholder.TypeC</option>
                                <option>@WebStore.Resources.Placeholder.IType</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="ticket-priority">@WebStore.Resources.Placeholder.Priority</label>
                            <select class="form-control" id="ticket-priority">
                                <option>@WebStore.Resources.Placeholder.CPriority</option>
                                <option>@WebStore.Resources.Placeholder.Urgent</option>
                                <option>@WebStore.Resources.Placeholder.High</option>
                                <option>@WebStore.Resources.Placeholder.Medium</option>
                                <option>@WebStore.Resources.Placeholder.Low</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="ticket-description">@WebStore.Resources.Placeholder.Description</label>
                    <textarea class="form-control" id="ticket-description" rows="8" required="" placeholder="@WebStore.Resources.Placeholder.WDescription"></textarea>
                </div>
                <div class="custom-file mb-3">
                    <input class="custom-file-input" type="file" id="file-input">
                    <label class="custom-file-label" for="file-input">@WebStore.Resources.Placeholder.File.</label>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-orangered" type="submit">@WebStore.Resources.Buttons.NewTicket</button>
            </div>
        </div>
    </div>
</form>

@section Included{
    @Html.Raw(WebStore.Resources.Scripts.JqueryValidate)
    @Html.Raw(WebStore.Resources.Scripts.JqueryValidateUnobtrousive)
    @Html.Raw(WebStore.Resources.Scripts.CustomValidator)
}


@section Scripts{
    <script>
        $(function () {
            $.AdminJs.profileMenu.activate();
        })
    </script>
}