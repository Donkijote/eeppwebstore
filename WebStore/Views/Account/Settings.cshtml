@model WebStore.Models.BindingAddress
@{
    ViewBag.Title = WebStore.Resources.Titles.Settings;
}

<section>
    <header class="header">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h1>
                        @ViewBag.Title
                    </h1>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <ul class="breadcrumbs">
                        <li>
                            <a href="@Url.Action("Index","Home", new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName}, null)">@WebStore.Resources.Titles.Home</a>
                        </li>
                        <li class="separator">&nbsp;</li>
                        <li>
                            <a href="@Url.Action("Home","Account", new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName}, null)">@WebStore.Resources.Titles.Account</a>
                        </li>
                        <li class="separator">&nbsp;</li>
                        <li>
                            @ViewBag.Title
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
</section>

@{ Html.RenderAction("ProfileMenu", "Menu", new { childAction = true }); }

<div class="container mb-5">
    <div class="row">
        <div class="col-lg-6">
            <h4>@WebStore.Resources.Titles.Profile</h4>
            <hr class="padding-bottom-1x">
            <aside class="user-info-wrapper">
                <div class="user-cover" style="background-image: url(http://themes.rokaux.com/unishop/v3.0/template-3/img/account/user-cover-img.jpg);">
                    <div class="info-label" data-toggle="tooltip" data-placement="top" title="" data-original-title="You currently have 290 Reward Points to spend">
                        <i class="fas fa-award"></i>290 points
                    </div>
                </div>
                <div class="user-info">
                    <div class="user-avatar">
                        <a class="edit-avatar" href="javascript:void(0);" data-toggle="modal" data-target="#avatarModal"></a>
                        <img class="img-fluid" src="https://s.w.org/images/core/emoji/2.3/svg/1f620.svg" alt="User">
                    </div>
                    <div class="user-data">
                        <h4 class="h5 text-capitalize">@System.Web.HttpContext.Current.Session["names"] @System.Web.HttpContext.Current.Session["lastname"]</h4><span>Ingreso 06 Febrero, 2017</span>
                    </div>
                </div>
            </aside>
            <form method="post" id="perfilUpdate">
                @Html.AntiForgeryToken()
                <input type="hidden" name="AddressId" value="@(Model.Addresses != null ? ""+Model.Addresses.Id :"")" />
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <input class="form-control text-capitalize" type="text" name="Name" id="strNames" placeholder="@WebStore.Resources.Placeholder.Names" value="@Model.User.strNames" data-val="true" data-val-required="Campo Requerido" />
                            <span class="input-group-addon">
                                <i class="fas fa-file-signature"></i>
                            </span>
                        </div>
                        <span class="field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <input class="form-control text-capitalize" type="text" name="LastName" id="strLastNames" placeholder="@WebStore.Resources.Placeholder.LastNames" value="@Model.User.strLastNames" data-val="true" data-val-required="Campo Requerido" />
                            <span class="input-group-addon">
                                <i class="fas fa-file-signature"></i>
                            </span>
                        </div>
                        <span class="field-validation-valid" data-valmsg-for="LastName" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <input class="form-control" type="text" name="UserId" id="strId" placeholder="@WebStore.Resources.Placeholder.Id" value="@Model.User.intId" @(Model.User.intId != null ? "readonly" : "") data-val="true" data-val-required="Campo Requerido" />
                            <span class="input-group-addon">
                                <i class="far fa-id-card"></i>
                            </span>
                        </div>
                        <span class="field-validation-valid" data-valmsg-for="UserId" data-valmsg-replace="true"></span>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <input class="form-control" type="text" name="UserPhone" id="strTLf" placeholder="@WebStore.Resources.Placeholder.Phone" value="@Model.User.intPhone" data-val="true" data-val-required="Campo Requerido" data-val-regex="Solo números" data-val-regex-pattern="([0-9]+)" />
                            <span class="input-group-addon">
                                <i class="fas fa-mobile-alt"></i>
                            </span>
                        </div>
                        <span class="field-validation-valid" data-valmsg-for="UserPhone" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <select class="form-control" type="text" name="Region" id="strStatesNationale" placeholder="@WebStore.Resources.Placeholder.Region" data-val="true" data-val-required="Campo Requerido">
                                <option value="">@WebStore.Resources.Placeholder.Region</option>
                                @{
                                    if (Model.Addresses == null)
                                    {
                                        foreach (var region in Model.Regiones)
                                        {
                                            <option value="@Html.DisplayFor(a => region.idRegion)">@Html.DisplayFor(a => region.strNombre) @Html.DisplayFor(a => region.intNumber)</option>
                                        }
                                    }
                                    else
                                    {
                                        foreach (var region in Model.Regiones)
                                        {
                                            <option value="@Html.DisplayFor(a => region.idRegion)" @(Model.Addresses.RegionId == region.idRegion ? "selected" : "")>@Html.DisplayFor(a => region.strNombre) @Html.DisplayFor(a => region.intNumber)</option>
                                        }
                                    }
                                }
                            </select>
                            <span class="input-group-addon">
                                <i class="fas fa-flag"></i>
                            </span>
                        </div>
                        <span class="field-validation-valid" data-valmsg-for="Region" data-valmsg-replace="true"></span>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <select class="form-control" type="text" name="Province" id="strProvinciaNationale" placeholder="@WebStore.Resources.Placeholder.Province" data-val="true" data-val-required="Campo Requerido">
                                @{
                                    if (Model.Addresses == null)
                                    {
                                        <option value="">@WebStore.Resources.Placeholder.Province</option>
                                    }
                                    else
                                    {
                                        foreach (var p in Model.Provinces)
                                        {
                                            <option value="@Html.DisplayFor(a => p.idProvincia)" @(Model.Addresses.ProvinceId == p.idProvincia ? "selected" : "")>@Html.DisplayFor(a => p.strNombre)</option>
                                        }
                                    }
                                }

                            </select>
                            <span class="input-group-addon">
                                <i class="fas fa-city"></i>
                            </span>
                        </div>
                        <span class="field-validation-valid" data-valmsg-for="Province" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <select class="form-control" type="text" name="Comuna" id="strComunaNationale" placeholder="@WebStore.Resources.Placeholder.Comune" data-val="true" data-val-required="Campo Requerido">
                                @{
                                    if (Model.Addresses == null)
                                    {
                                        <option value="">@WebStore.Resources.Placeholder.Comune</option>
                                    }
                                    else
                                    {
                                        foreach (var p in Model.Comunes)
                                        {
                                            <option value="@Html.DisplayFor(a => p.idComuna)" @(Model.Addresses.ComunaId == p.idComuna ? "selected" : "")>@Html.DisplayFor(a => p.strNombre)</option>
                                        }
                                    }
                                }
                                <option value="">@WebStore.Resources.Placeholder.Comune</option>
                            </select>
                            <span class="input-group-addon">
                                <i class="far fa-object-group"></i>
                            </span>
                        </div>
                        <span class="field-validation-valid" data-valmsg-for="Comuna" data-valmsg-replace="true"></span>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <input class="form-control" type="text" name="City" id="strCity" placeholder="@WebStore.Resources.Placeholder.City" value="@(Model.Addresses != null ? Model.Addresses.City: "")" data-val="true" data-val-required="Campo Requerido" />
                            <span class="input-group-addon">
                                <i class="fas fa-city"></i>
                            </span>
                        </div>
                        <span class="field-validation-valid" data-valmsg-for="City" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <input class="form-control" type="text" name="Address" id="strAddress" placeholder="@WebStore.Resources.Placeholder.Address" value="@(Model.Addresses != null ? Model.Addresses.Address: "")" data-val="true" data-val-required="Campo Requerido" />
                            <span class="input-group-addon">
                                <i class="fas fa-map-marker-alt"></i>
                            </span>
                        </div>
                        <span class="field-validation-valid" data-valmsg-for="Address" data-valmsg-replace="true"></span>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <input class="form-control" type="text" name="Type" id="strHome" placeholder="@WebStore.Resources.Placeholder.House" value="@(Model.Addresses != null ? Model.Addresses.Type: "")" data-val="true" data-val-required="Campo Requerido" />
                            <span class="input-group-addon">
                                <i class="fas fa-home"></i>
                            </span>
                        </div>
                        <span class="field-validation-valid" data-valmsg-for="Type" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group input-group">
                            <input class="form-control" type="text" name="PosteCode" id="strPostale" placeholder="@WebStore.Resources.Placeholder.PostCode" value="@(Model.Addresses != null ? ""+Model.Addresses.Poste: "")" data-val="true" data-val-required="Campo Requerido" data-val-regex="Solo números" data-val-regex-pattern="([0-9]+)" />
                            <span class="input-group-addon">
                                <i class="fas fa-map-marked-alt"></i>
                            </span>
                        </div>
                        <span class="field-validation-valid" data-valmsg-for="PosteCode" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <button class="btn btn-orangered float-right" type="submit">@WebStore.Resources.Buttons.Save</button>
            </form>
        </div>
        <div class="col-lg-6">
            <h4>@WebStore.Resources.Titles.Security</h4>
            <hr class="padding-bottom-1x">
            <form method="post" id="securityEditEmail">
                <div class="row mb-3">
                    <div class="col-lg-6">
                        <span style="font-weight:600;">Email:</span><br />
                        <span>xxxx@xxxx.com</span>
                    </div>
                    <div class="col-lg-6 text-right">
                        <button type="submit" class="btn btn-warning btn-sm">@WebStore.Resources.Buttons.Edit</button>
                    </div>
                </div>
            </form>

            <form method="post" id="securityEditPassword">
                <div class="row mb-3">
                    <div class="col-lg-6">
                        <span style="font-weight:600;">Contraseña:</span><br />
                        <span>********</span>
                    </div>
                    <div class="col-lg-6 text-right">
                        <a href="@Url.Action("Password",new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName})" class="btn btn-warning btn-sm">@WebStore.Resources.Buttons.Edit</a>
                    </div>
                </div>
            </form>

            <form method="post" id="securityEditSecondNumber">
                <div class="row mb-3">
                    <div class="col-lg-6">
                        <span style="font-weight:600;">Teléfono de Confianza:</span><br />
                        <span>+56 9 xxxx xxxx</span>
                    </div>
                    <div class="col-lg-6 text-right">
                        <button type="submit" class="btn btn-warning btn-sm">@WebStore.Resources.Buttons.Edit</button>
                    </div>
                </div>
            </form>

            <form method="post" id="securityEditMoreSetings">
                <div class="row mb-3">
                    <div class="col-lg-8">
                        <span style="font-weight:600;">Seguridad Avanzada:</span><br />
                        <span class="text-muted">Selecciona como y cuando recibir códigos de seguridad</span>
                    </div>
                    <div class="col-lg-4 text-right">
                        <button type="submit" class="btn btn-warning btn-sm">@WebStore.Resources.Buttons.Edit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div id="errorReport"></div>
</div>

@section Included{
    @Html.Raw(WebStore.Resources.Scripts.JqueryValidate)
    @Html.Raw(WebStore.Resources.Scripts.JqueryValidateUnobtrousive)
    @Html.Raw(WebStore.Resources.Scripts.CustomValidator)
    @Html.Raw(WebStore.Resources.Scripts.SweetAlert)
}

@section Scripts{
    <script>
        $(function () {
            $.AdminJs.profileMenu.activate();
            $.AdminJs.userSettings.activate();
        })
    </script>
}