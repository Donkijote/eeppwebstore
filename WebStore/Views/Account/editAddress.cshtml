
@{
    ViewBag.Title = WebStore.Resources.Titles.editAddress;
}

<section>
    <header class="header">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h1>
                        @ViewBag.Title
                    </h1>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <ul class="breadcrumbs">
                        <li>
                            <a href="@Url.Action("Index","Home", new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName}, null)">@WebStore.Resources.Titles.Home</a>
                        </li>
                        <li class="separator">&nbsp;</li>
                        <li>
                            <a href="@Url.Action("Home","Account", new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName}, null)">@WebStore.Resources.Titles.Account</a>
                        </li>
                        <li class="separator">&nbsp;</li>
                        <li>
                            <a href="@Url.Action("Address","Account", new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName}, null)">@WebStore.Resources.Titles.Address</a>
                        </li>
                        <li class="separator">&nbsp;</li>
                        <li>
                            @ViewBag.Title
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
</section>

@Html.Partial("~/Views/Shared/profileMenu.cshtml")

<div class="container mb-5">
    <div id="aditAddressSecction" class="row">
        <div class="card mx-auto w-50">
            <form id="addNewInternationalAddress" method="post">
                <div class="card-body">
                    <div class="col-lg-12 mb-3">
                        <label class="font-weight-bold pl-3">Nombres</label>
                        <div class="form-group input-group">
                            <input class="form-control" type="text" name="strNames" id="strNames" placeholder="Nombres" />
                            <span class="input-group-addon">
                                <i class="fas fa-file-signature"></i>
                            </span>
                        </div>
                    </div>

                    <div class="col-lg-12 mb-3">
                        <label class="font-weight-bold pl-3">Apellidos</label>
                        <div class="form-group input-group">
                            <input class="form-control" type="text" name="strLastNames" id="strLastNames" placeholder="Apellidos" />
                            <span class="input-group-addon">
                                <i class="fas fa-file-signature"></i>
                            </span>
                        </div>
                    </div>

                    <div class="col-lg-12 mb-3">
                        <label class="font-weight-bold pl-3">País</label>
                        <div class="form-group input-group">
                            <input type="text" class="form-control" name="strCountry" id="strCountry" placeholder="País"/>
                            <span class="input-group-addon">
                                <i class="fas fa-globe-americas"></i>
                            </span>
                        </div>
                    </div>

                    <div class="col-lg-12 mb-3">
                        <label class="font-weight-bold pl-3">Estado/Provincia/Región</label>
                        <div class="form-group input-group">
                            <input class="form-control" type="text" name="strStates" id="strStates" placeholder="Estado/Provincia/Región" />
                            <span class="input-group-addon">
                                <i class="fas fa-flag"></i>
                            </span>
                        </div>
                    </div>

                    <div class="col-lg-12 mb-3">
                        <label class="font-weight-bold pl-3">Ciudad</label>
                        <div class="form-group input-group">
                            <input class="form-control" type="text" name="strCity" id="strCity" placeholder="Ciudad" />
                            <span class="input-group-addon">
                                <i class="fas fa-city"></i>
                            </span>
                        </div>
                    </div>

                    <div class="col-lg-12 mb-3">
                        <label class="font-weight-bold pl-3">Código Postal</label>
                        <div class="form-group input-group">
                            <input class="form-control" type="text" name="strPostale" id="strPostale" placeholder="Código Postal" />
                            <span class="input-group-addon">
                                <i class="fas fa-map-marked-alt"></i>
                            </span>
                        </div>
                    </div>

                    <div class="col-lg-12 mb-3">
                        <label class="font-weight-bold pl-3">Dirección</label>
                        <div class="form-group input-group">
                            <input class="form-control" type="text" name="strAddress" id="strAddress" placeholder="Dirección #" />
                            <span class="input-group-addon">
                                <i class="fas fa-map-marker-alt"></i>
                            </span>
                        </div>
                    </div>

                    <div class="col-lg-12 mb-3">
                        <label class="font-weight-bold pl-3">Casa/Apartamento</label>
                        <div class="form-group input-group">
                            <input class="form-control" type="text" name="strHome" id="strHome" placeholder="Casa/Apartamento" />
                            <span class="input-group-addon">
                                <i class="fas fa-home"></i>
                            </span>
                        </div>
                    </div>

                    <div class="col-lg-12 mb-3">
                        <label class="font-weight-bold pl-3">
                            Número de ID
                            <small>
                                <a href="javascript:void(0)" id="popover" data-toggle="popover" data-trigger="hover" data-placement="right" title="Número de ID" data-content="Los paquetes no serán entregados sin el número válido de identificación del cliente. Nosotros no usamos esta información para algún otro propósito. Por favor ingrese su número de identificación.">
                                    Leer más <i class="fas fa-angle-down"></i>
                                </a>
                            </small>
                        </label>
                        <div class="form-group input-group">
                            <input class="form-control" type="text" name="strHome" id="strHome" placeholder="Número de ID" />
                            <span class="input-group-addon">
                                <i class="fas fa-id-card"></i>
                            </span>
                        </div>
                    </div>

                    <div class="col-lg-12 mb-3">
                        <label class="font-weight-bold pl-3">Teléfono</label>
                        <div class="form-group input-group">
                            <input class="form-control" type="text" name="strHome" id="strHome" placeholder="Teléfono" />
                            <span class="input-group-addon">
                                <i class="fas fa-mobile-alt"></i>
                            </span>
                        </div>
                    </div>

                    <div class="col-lg-12 mb-3 text-right">
                        <button class="btn btn-warning">Editar</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
