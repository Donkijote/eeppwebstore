@model IEnumerable<WebStore.Models.ProductsSingle>

@section MetaContent{
    <meta name="keywords" content="shop, e-commerce, modern, flat style, responsive, online store, business, mobile, blog, bootstrap 4, html5, css3, jquery, js, gallery, slider, touch, creative, clean">
}

<section>
    <header class="header d-none">
        <div class="container d-none">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h1>
                        @ViewBag.Title
                    </h1>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <ul class="breadcrumbs">
                        <li>
                            <a href="@Url.Action("Index","Home",new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName})">@WebStore.Resources.Titles.Home</a>
                        </li>
                        <li class="separator">&nbsp;</li>
                        <li>
                            <a href="@Url.Action("All","Categories",new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName})">@WebStore.Resources.Titles.Categories</a>
                        </li>
                        <li class="separator">&nbsp;</li>
                        <li>
                            <a href="@Url.Action("s","Categories",new { id = @ViewBag.Category,language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName})">
                                @ViewBag.Category
                            </a>
                        </li>
                        <li class="separator">&nbsp;</li>
                        <li>
                            @ViewBag.Breadcrumbs
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
</section>

@foreach (var item in Model)
{
<div class="container py-5">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-3">
                    <ul class="mg-product-thumbnails owl-thumbs" data-slider-id="1">
                        <li class="owl-thumb-item">
                            <a id="carousel-selector-0">
                                <img src="~/Content/img/products/@item.strCodigo-1.jpg" alt="@item.strNombre">
                            </a>
                        </li>
                        <li class="owl-thumb-item">
                            <a id="carousel-selector-1">
                                <img src="~/Content/img/products/@item.strCodigo-2.jpg" alt="@item.strNombre">
                            </a>
                        </li>
                        <li class="owl-thumb-item">
                            <a id="carousel-selector-2">
                                <img src="~/Content/img/products/@item.strCodigo-3.jpg" alt="@item.strNombre">
                            </a>
                        </li>
                        @if (File.Exists(Server.MapPath("/Content/img/products/" + item.strCodigo + "-4.jpg")))
                        {
                            <li class="owl-thumb-item">
                                <a id="carousel-selector-3">
                                    <img src="~/Content/img/products/@item.strCodigo-4.jpg" alt="@item.strNombre">
                                </a>
                            </li>
                        }
                        @if (item.Ficha.Select(x => x.strSec).FirstOrDefault())
                        {
                            <li class="owl-thumb-item">
                                <a id="carousel-selector-4">
                                    <img src="~/Content/img/qr/@(item.Ficha.Select(x=>x.strBrand).FirstOrDefault())-sec.jpg" alt="@item.strNombre">
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="col-md-9">
                    <div class="mg-product-gallery">
                        @if (item.intPrecioOff != "0")
                        {
                            <span class="mg-product-badge bg-success">Oferta</span>
                        }
                        <div id="carouselProductsImg" class="owl-carousel owl-loaded owl-drag" data-slider-id="1">
                            <div class="owl-stage-outer">
                                <div class="owl-stage">
                                    <div class="owl-item" data-hash="one">
                                        <img class="img-fluid" src="~/Content/img/products/@item.strCodigo-1.jpg" alt="@item.strNombre">
                                    </div>
                                    <div class="owl-item" data-hash="two">
                                        <img class="img-fluid" src="~/Content/img/products/@item.strCodigo-2.jpg" alt="@item.strNombre">
                                    </div>
                                    <div class="owl-item" data-hash="three">
                                        <img class="img-fluid" src="~/Content/img/products/@item.strCodigo-3.jpg" alt="@item.strNombre">
                                    </div>
                                    @if (System.IO.File.Exists(Server.MapPath("/Content/img/products/" + item.strCodigo + "-4.jpg")))
                                    {
                                        <div class="owl-item" data-hash="four">
                                            <img class="img-fluid" src="~/Content/img/products/@item.strCodigo-4.jpg" alt="@item.strNombre">
                                        </div>
                                    }
                                    @if (item.Ficha.Select(x => x.strSec).FirstOrDefault())
                                    {
                                        <div class="owl-item" data-hash="five">
                                            <img class="img-fluid" src="~/Content/img/qr/@(item.Ficha.Select(x=>x.strBrand).FirstOrDefault())-sec.jpg" alt="@item.strNombre">
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="mg-sp-categories pb-3">
                        <ul class="breadcrumbs">
                            <li>
                                <a href="@Url.Action("Index","Home",new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName})">@WebStore.Resources.Titles.Home</a>
                            </li>
                            <li class="separator">&nbsp;</li>
                            <li>
                                <a href="@Url.Action("All","Categories",new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName})">@WebStore.Resources.Titles.Categories</a>
                            </li>
                            <li class="separator">&nbsp;</li>
                            <li>
                                <a href="@Url.Action("s","Categories",new { id = @ViewBag.Category,language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName})">
                                    @ViewBag.Category
                                </a>
                            </li>
                            <li class="separator">&nbsp;</li>
                            <li>
                                @ViewBag.Breadcrumbs
                            </li>
                        </ul>
                    </div>
