@model WebStore.Models.BindingCateogyFamilyChild
@{
    ViewBag.Title = WebStore.Resources.Titles.Categories;
}

<section>
    <header class="header">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h1>Categorías</h1>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <ul class="breadcrumbs">
                        <li>
                            <a href="/">Home</a>
                        </li>
                        <li class="separator">&nbsp;</li>
                        <li>
                            Categorías
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
</section>
<section name="categories" class="container mb-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="mg-alert alert alert-image-bg alert-dismissible fade show text-center mb-4" style="background-image: url(http://themes.rokaux.com/unishop/v3.0/template-1/img/banners/alert-bg.jpg);">
                <span class="fas fa-times mg-alert-close text-white" data-dismiss="alert" aria-label="Close"></span>
                <div class="h3 text-medium text-white pt-3 pb-3">
                    <i class="far fa-clock" style="font-size: 33px; margin-top: -5px;"></i>
                    &nbsp;&nbsp;Check our Limited Offers. Save up to 50%&nbsp;&nbsp;&nbsp;
                    <div class="mt-3 hidden-xl-up"></div>
                    <a class="btn btn-orangered" href="#">@WebStore.Resources.Buttons.ViewOffers</a>
                </div>
            </div>
            <div class="row">
                @foreach (var i in Model.family)
                {
                    <div class="col-sm-6 mb-3">
                        <div class="mg-card mb-3">
                            <a class="mg-card-img-tiles">
                                <div class="mg-inner">
                                    <div class="mg-main-img">
                                        <img class="img-fuild" src="~/Content/img/categories/@i.strImgOne">
                                    </div>
                                    <div class="mg-thumblist">
                                        <img class="img-fuild" src="~/Content/img/categories/@i.strImgTwo">
                                        <img class="img-fuild" src="~/Content/img/categories/@i.strImgThree">
                                    </div>
                                </div>
                            </a>
                            <div class="card-body text-center">
                                <h4 class="card-title">@WebStore.Resources.Categories.ResourceManager.GetString(i.strName)</h4>
                                <p class="text-muted">
                                    @foreach (var j in Model.category)
                                    {
                                        if (j.refFamily == i.idFamily)
                                        {
                                            <span>
                                                @WebStore.Resources.Categories.ResourceManager.GetString(j.strNombre),
                                            </span>
                                        }
                                    }
                                </p>
                                <a class="btn btn-outline-orangered btn-sm" href="@Url.Action("s", "Categories", new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName, id = WebStore.Resources.Seo.ResourceManager.GetString(i.strName) })">Ver Productos</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>