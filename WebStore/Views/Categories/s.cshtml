@using X.PagedList;

@using X.PagedList.Mvc;

@model IEnumerable<WebStore.Models.Products>

<section>
    <header class="header">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h1>
                        @ViewBag.Title
                    </h1>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <ul class="breadcrumbs">
                        <li>
                            <a href="@Url.Action("Index","Home", new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName})">@WebStore.Resources.Titles.Home</a>
                        </li>
                        <li class="separator">&nbsp;</li>
                        <li>
                            <a href="@Url.Action("All","Categories", new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName})">@WebStore.Resources.Titles.Categories</a>
                        </li>
                        <li class="separator">&nbsp;</li>
                        <li>
                            @ViewBag.Title
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
</section>

<section name="categories" class="container mb-5">
    <div class="row">
        <div class="col-lg-3">
            @{ Html.RenderAction("LeftMenu", "Menu", new { childAction = true, active = ViewBag.active, seoLocation = ViewBag.SeoLocation, minPrice = ViewBag.minPrice, maxPrice = ViewBag.maxPrice });}
        </div>
        <div class="col-lg-9">
            <div class="alert mg-alert alert-image-bg alert-dismissible fade show text-center mb-4" style="background-image: url(http://themes.rokaux.com/unishop/v3.0/template-1/img/banners/alert-bg.jpg);">
                <span class="fas fa-times mg-alert-close text-white" data-dismiss="alert"></span>
                <div class="h3 text-medium text-white pt-3 pb-3">
                    <i class="far fa-clock" style="font-size: 33px; margin-top: -5px;"></i>
                    &nbsp;&nbsp;Check our Limited Offers. Save up to 50%&nbsp;&nbsp;&nbsp;
                    <div class="mt-3 hidden-xl-up"></div>
                    <a class="btn btn-orangered" href="#">View Offers</a>
                </div>
            </div>
            <div class="mg-shop-toolbar padding-bottom-1x mb-2">
                <div class="column">
                    <div class="mg-shop-sorting">
                        <label for="sorting">Sort by:</label>
                        <select class="form-control" id="sort-by-button-group">
                            <option data-sort-value="price" data-ascending="true">Menor a mayor precio</option>
                            <option data-sort-value="price" data-ascending="false">Mayor a menor price</option>
                            <option data-sort-value="stars" data-ascending="false">Mejor calificado</option>
                            <option data-sort-value="name" data-ascending="true">A - Z</option>
                            <option data-sort-value="name" data-ascending="false">Z - A</option>
                        </select><span class="text-muted">Showing:&nbsp;</span><span></span>
                    </div>
                </div>
                <div class="column">
                    <form action="" method="get" id="typeView">
                        <div class="mg-shop-view">
                            @{
                                if (!String.IsNullOrEmpty(Request.QueryString["page"]) || !String.IsNullOrWhiteSpace(Request.QueryString["page"]))
                                {
                                    <input type="hidden" name="page" value="@Request.QueryString["page"]" />
                                }
                            }
                            @if (ViewBag.type == "Grid" || ViewBag.type == "")
                            {
                                <input type="radio" name="Utf8" id="grid" class="grid" value="Grid" checked>
                                <label for="grid" class="grid-view typeview"><span></span><span></span><span></span></label>
                                <input type="radio" name="Utf8" id="list" class="list" value="List">
                                <label for="list" class="list-view typeview"><span></span><span></span><span></span></label>
                            }
                            else if (ViewBag.type == "List")
                            {
                                <input type="radio" name="Utf8" id="grid" class="grid" value="Grid">
                                <label for="grid" class="grid-view typeview"><span></span><span></span><span></span></label>
                                <input type="radio" name="Utf8" id="list" class="list" value="List" checked>
                                <label for="list" class="list-view typeview"><span></span><span></span><span></span></label>
                            }
                        </div>
                    </form>
                </div>
            </div>

            <div class="row grid" id="renderProducts">
                @if (ViewBag.type == "Grid" || ViewBag.type == "")
                {
                    if (Model.Any())
                    {
                        Random rand = new Random();
                        foreach (var item in Model)
                        {
                            <div class="col-md-4 col-sm-6 col-6 element-item">
                                <div class="mg-product-card mb-3">
                                    <div class="mg-product-wish bg-secondary" href="javascript:void(0);">
                                        <i></i>
                                    </div>
                                    <div class="mg-rating-stars stars">
                                        @{
                                            int stars = rand.Next(5);
                                            for (var i = 1; i < 6; i++)
                                            {
                                                <i class="fas fa-star @(i <= stars ? "filled": "")"></i>
                                            }
                                        }
                                    </div>
                                    <a class="mg-product-thumb" href="@Url.Action("s","Categories", new { id = Html.DisplayFor(modelItem => item.categorySeo), idp = Html.DisplayFor(modelItem => item.strCodigo), language=System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName })">
                                        <img class="img-fuild" src="https://eepp.cl/images/productos/Z1-K-BLANCO.jpg"
                                             alt="Producto">
                                        <img class="img-fuild img-sec" src="https://eepp.cl/images/home/sec.png">

                                        <div class="mg-product-card-body">
                                            <h4 class="mg-product-price">
                                                <del>$15.062,00</del><br />
                                                $ <span class="price">@Html.DisplayFor(modelItem => item.intPrecio)</span>
                                                <label class="off">50% OFF</label>
                                            </h4>
                                            <div class="mg-product-category">
                                                SKU: <span class="number">@Html.DisplayFor(modelItem => item.strCodigo)</span>
                                            </div>
                                            <h3 class="mg-product-title name">
                                                @Html.DisplayFor(modelItem => item.strNombre)
                                            </h3>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <h2>No hay Productos</h2><br />
                    }
                }
                else if (ViewBag.type == "List")
                {
                    if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <div class="mg-product-card mg-product-list mb-3">
                                <div class="mg-product-wish bg-secondary" href="javascript:void(0);">
                                    <i></i>
                                </div>
                                <a class="mg-product-thumb" href="@Url.Action("s","Categories", new { id = Html.DisplayFor(modelItem => item.categorySeo), idp = Html.DisplayFor(modelItem => item.strCodigo), language=System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName })">
                                    <img class="img-fuild" src="https://eepp.cl/images/productos/Z1-K-BLANCO.jpg"
                                         alt="Producto">
                                    <img class="img-fuild img-sec" src="https://eepp.cl/images/home/sec.png">
                                </a>
                                <div class="mg-product-card-body">
                                    <div class="mg-rating-stars on-list">
                                        <i class="fas fa-star filled"></i>
                                        <i class="fas fa-star filled"></i>
                                        <i class="fas fa-star filled"></i>
                                        <i class="fas fa-star filled"></i>
                                        <i class="fas fa-star"></i>
                                    </div>
                                    <h4 class="mg-product-price">
                                        <del>$62.00</del><br />
                                        $ @Html.DisplayFor(modelItem => item.intPrecio)
                                        <label class="off">50% OFF</label>
                                    </h4>
                                    <div class="mg-product-category">
                                        SKU: @Html.DisplayFor(modelItem => item.strCodigo)
                                    </div>
                                    <h3 class="mg-product-title">
                                        <a href="@Url.Action("s","Categories", new { id = "Cables", idp = Html.DisplayFor(modelItem => item.strCodigo), language=System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName })">@Html.DisplayFor(modelItem => item.strNombre)</a>
                                    </h3>
                                    <p class="text-sm text-muted hidden-xs-down my-1">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Tempore odit officiis illo perferendis deserunt, ipsam dolor ad dolorem eaque veritatis.</p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <h2>No hay Productos</h2>
                    }
                }
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('#typeView input[type=radio]').on('change', function () {
                $("#typeView").submit();
            });
            /*$('#renderProducts').pagination({
                dataSource: [1, 2, 3, 4, 5, 6, 7],
                pageSize: 1,
                callback: function (data, pagination) {
                    console.log(data);
                    var html = template(data);
                    dataContainer.html(html);
                }
            });*/
            var $grid = $('.grid').isotope({
                itemSelector: '.element-item',
                layoutMode: 'fitRows',
                getSortData: {
                    name: '.name',
                    number: '.number parseInt',
                    price: function (itemElem) {
                        var weight = $(itemElem).find('.price').text();
                        weight = weight.toString().replace(/\./g, '');
                        return parseFloat(weight.toString().replace(/\,/g, '.'));
                    },
                    stars: function (itemElem) {
                        var stars = $(itemElem).find('.stars');
                        return parseInt(stars.find('i.filled').length);
                    }
                },
                sortBy: 'name'
            });

            // bind sort button click
            $('#sort-by-button-group').on('change', function () {
                var sortValue = $(this).find(':selected').attr('data-sort-value');
                var Ascending = $(this).find(':selected').attr('data-ascending');
                if (Ascending == "true") {
                    $grid.isotope({ sortBy: sortValue, sortAscending: true });
                } else {
                    $grid.isotope({ sortBy: sortValue, sortAscending: false });
                }
                
            });
        })
    </script>
}

