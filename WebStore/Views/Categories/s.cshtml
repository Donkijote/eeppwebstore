@using X.PagedList;

@using X.PagedList.Mvc;

@model IPagedList<WebStore.Models.Products>

@{
    var pages = (IPagedList)Model;
}

<section>
    <header class="header">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <h1>
                        @ViewBag.Title
                    </h1>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <ul class="breadcrumbs">
                        <li>
                            <a href="@Url.Action("Index","Home", new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName})">@WebStore.Resources.Titles.Home</a>
                        </li>
                        <li class="separator">&nbsp;</li>
                        <li>
                            <a href="@Url.Action("All","Categories", new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName})">@WebStore.Resources.Titles.Categories</a>
                        </li>
                        <li class="separator">&nbsp;</li>
                        <li>
                            @ViewBag.Title
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
</section>

<section name="categories" class="container mb-5">
    <div class="row">
        <div class="col-lg-3">
            @Html.Partial("~/Views/Shared/LeftMenu.cshtml")
        </div>
        <div class="col-lg-9">
            <div class="mg-alert alert-image-bg alert-dismissible fade show text-center mb-4" style="background-image: url(http://themes.rokaux.com/unishop/v3.0/template-1/img/banners/alert-bg.jpg);">
                <span class="fas fa-times mg-alert-close text-white" data-dismiss="alert"></span>
                <div class="h3 text-medium text-white pt-3 pb-3">
                    <i class="far fa-clock" style="font-size: 33px; margin-top: -5px;"></i>
                    &nbsp;&nbsp;Check our Limited Offers. Save up to 50%&nbsp;&nbsp;&nbsp;
                    <div class="mt-3 hidden-xl-up"></div>
                    <a class="btn btn-primary" href="#">View Offers</a>
                </div>
            </div>
            <div class="mg-shop-toolbar padding-bottom-1x mb-2">
                <div class="column">
                    <div class="mg-shop-sorting">
                        <label for="sorting">Sort by:</label>
                        <select class="form-control" id="sorting">
                            <option>Popularity</option>
                            <option>Low - High Price</option>
                            <option>High - Low Price</option>
                            <option>Average Rating</option>
                            <option>A - Z Order</option>
                            <option>Z - A Order</option>
                        </select><span class="text-muted">Showing:&nbsp;</span><span>@((pages.PageNumber - 1) * pages.PageSize + 1) - @(pages.PageNumber * pages.PageSize) items of @pages.TotalItemCount</span>
                    </div>
                </div>
                <div class="column">
                    <form action="" method="get" id="typeView">
                        <div class="mg-shop-view">
                            @{
                                if (!String.IsNullOrEmpty(Request.QueryString["page"]) || !String.IsNullOrWhiteSpace(Request.QueryString["page"]))
                                {
                                    <input type="hidden" name="page" value="@Request.QueryString["page"]" />
                                }
                            }
                            @if (ViewBag.type == "Grid" || ViewBag.type == "")
                            {
                                <input type="radio" name="Utf8" id="grid" class="grid" value="Grid" checked>
                                <label for="grid" class="grid-view typeview"><span></span><span></span><span></span></label>
                                <input type="radio" name="Utf8" id="list" class="list" value="List">
                                <label for="list" class="list-view typeview"><span></span><span></span><span></span></label>
                            }
                            else if (ViewBag.type == "List")
                            {
                                <input type="radio" name="Utf8" id="grid" class="grid" value="Grid">
                                <label for="grid" class="grid-view typeview"><span></span><span></span><span></span></label>
                                <input type="radio" name="Utf8" id="list" class="list" value="List" checked>
                                <label for="list" class="list-view typeview"><span></span><span></span><span></span></label>
                            }
                        </div>
                    </form>
                </div>
            </div>
            <div class="row" id="renderProducts">
                @if (ViewBag.type == "Grid" || ViewBag.type == "")
                {
                    if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <div class="col-md-4 col-sm-6 col-6">
                                <div class="mg-product-card mb-3">
                                    <a class="mg-product-wish bg-secondary" href="javascript:void(0);">
                                        <i></i>
                                    </a>
                                    <div class="mg-rating-stars">
                                        <i class="fas fa-star filled"></i>
                                        <i class="fas fa-star filled"></i>
                                        <i class="fas fa-star filled"></i>
                                        <i class="fas fa-star filled"></i>
                                        <i class="fas fa-star"></i>
                                    </div>
                                    <a class="mg-product-thumb" href="@Url.Action("s","Categories", new { id = "Cables", idp = Html.DisplayFor(modelItem => item.strCodigo), language=System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName })">
                                        <img class="img-fuild" src="https://eepp.cl/images/productos/Z1-K-BLANCO.jpg"
                                             alt="Producto">
                                    </a>
                                    <div class="mg-product-card-body">
                                        <h4 class="mg-product-price">
                                            <del>$15.062,00</del><br />
                                            $ @Html.DisplayFor(modelItem => item.intPrecio)
                                            <label class="off">50% OFF</label>
                                        </h4>
                                        <div class="mg-product-category">
                                            SKU: @Html.DisplayFor(modelItem => item.strCodigo)
                                        </div>
                                        <h3 class="mg-product-title">
                                            <a href="@Url.Action("s","Categories", new { id = "Cables", idp = Html.DisplayFor(modelItem => item.strCodigo), language=System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName })">@Html.DisplayFor(modelItem => item.strNombre)</a>
                                        </h3>

                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <h2>No hay Productos</h2><br />
                    }
                }
                else if (ViewBag.type == "List")
                {
                    if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <div class="mg-product-card mg-product-list mb-3">
                                <div class="mg-product-badge bg-danger">Sale </div>
                                <div class="mg-rating-stars">
                                    <i class="fas fa-star filled"></i>
                                    <i class="fas fa-star filled"></i>
                                    <i class="fas fa-star filled"></i>
                                    <i class="fas fa-star filled"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                                <a class="mg-product-thumb" href="@Url.Action("s","Categories", new { id = "Cables", idp = Html.DisplayFor(modelItem => item.strCodigo), language=System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName })">
                                    <img class="img-fuild" src="https://eepp.cl/images/productos/Z1-K-BLANCO.jpg"
                                         alt="Producto">
                                </a>
                                <div class="mg-product-card-body">
                                    <div class="mg-product-category">
                                        <a>@Html.DisplayFor(modelItem => item.strCodigo)</a>
                                    </div>
                                    <h3 class="mg-product-title">
                                        <a href="@Url.Action("s","Categories", new { id = "Cables", idp = Html.DisplayFor(modelItem => item.strCodigo), language=System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName })">@Html.DisplayFor(modelItem => item.strNombre)</a>
                                    </h3>
                                    <h4 class="mg-product-price">
                                        <del>$62.00</del>@Html.DisplayFor(modelItem => item.intPrecio)
                                    </h4>
                                    <p class="text-sm text-muted hidden-xs-down my-1">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Tempore odit officiis illo perferendis deserunt, ipsam dolor ad dolorem eaque veritatis.</p>
                                </div>
                                <div class="mg-product-button-group">
                                    <a class="mg-product-button btn-wishlist" href="javascript:void(0);">
                                        <i class="far fa-heart"></i>
                                        <span>Lista de Deseo</span>
                                    </a>
                                    <a class="mg-product-button btn-compare" href="javascript:void(0);">
                                        <i class="fos fas fo-compare"></i>
                                        <span>Compare</span>
                                    </a>
                                    <a class="mg-product-button" href="javascript:void(0);" data-toast="" data-toast-type="success"
                                       data-toast-position="topRight" data-toast-icon="icon-check-circle" data-toast-title="Product"
                                       data-toast-message="successfuly added to cart!">
                                        <i class="fas fa-shopping-cart"></i>
                                        <span>To Cart</span>
                                    </a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <h2>No hay Productos</h2>
                    }
                }
            </div>
            @Html.PagedListPager(Model, page => Url.Action("s",
            new { page, id = ViewContext.RouteData.Values["id"], Utf8 = Request.QueryString["Utf8"] }),
            new X.PagedList.Mvc.Common.PagedListRenderOptionsBase() {
                Display = X.PagedList.Mvc.Common.PagedListDisplayMode.IfNeeded,
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" },
                ContainerDivClasses = new string[] { "pagination-container on-desktop" },
                UlElementClasses = new string[] { "pagination pagination-lg justify-content-center" },
                DisplayLinkToFirstPage = X.PagedList.Mvc.Common.PagedListDisplayMode.IfNeeded,
                DisplayLinkToLastPage = X.PagedList.Mvc.Common.PagedListDisplayMode.IfNeeded,
                LinkToFirstPageFormat = WebStore.Resources.Links.First,
                LinkToLastPageFormat = WebStore.Resources.Links.Last,
                PreviousElementClass = "mg-previous",
                LinkToPreviousPageFormat = "",
                NextElementClass = "mg-next",
                LinkToNextPageFormat = "",
                ClassToApplyToFirstListItemInPager =  "mg-first",
                ClassToApplyToLastListItemInPager = "mg-last"
            })
            @Html.PagedListPager(Model, page => Url.Action("s",
            new { page, id = ViewContext.RouteData.Values["id"], Utf8 = Request.QueryString["Utf8"] }),
            new X.PagedList.Mvc.Common.PagedListRenderOptionsBase() {
                Display = X.PagedList.Mvc.Common.PagedListDisplayMode.IfNeeded,
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" },
                ContainerDivClasses = new string[] { "pagination-container on-mobile" },
                UlElementClasses = new string[] { "pagination justify-content-center" },
                DisplayLinkToFirstPage = X.PagedList.Mvc.Common.PagedListDisplayMode.IfNeeded,
                DisplayLinkToLastPage = X.PagedList.Mvc.Common.PagedListDisplayMode.IfNeeded,
                LinkToFirstPageFormat = "",
                LinkToLastPageFormat = "",
                PreviousElementClass = "mg-previous",
                LinkToPreviousPageFormat = "",
                NextElementClass = "mg-next",
                LinkToNextPageFormat = "",
                ClassToApplyToFirstListItemInPager =  "mg-first",
                ClassToApplyToLastListItemInPager = "mg-last"
            })
        </div>
    </div>
</section>
