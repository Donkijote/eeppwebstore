@model WebStore.Models.BindingCateogyFamilyChild
<div class="mg-sidebar-toggle position-left">
    <i class="fas fa-filter"></i>
</div>
<aside class="mg-sidebar mg-sidebar-offcanvas position-left">
    <span class="mg-sidebar-close">
        <i class="fas fa-times"></i>
    </span>
    <section class="mg-widget mg-widget-categories">
        <h3 class="mg-widget-title">Shop Categories</h3>
        <ul>
            @foreach (var i in Model.family)
            {
                <li class="has-children">
                    <a href="#">@WebStore.Resources.Categories.ResourceManager.GetString(i.strName)</a><span>(1138)</span>
                    <ul>
                        @foreach (var j in Model.category)
                        {
                            if (j.refFamily == i.idFamily)
                            {
                                <li>
                                    <a href="#">@WebStore.Resources.Categories.ResourceManager.GetString(j.strNombre)</a><span>(508)</span>
                                </li>
                            }
                        }
                    </ul>
                </li>
            }
        </ul>
    </section>

    <section class="mg-widget mg-widget-categories">
        <h3 class="mg-widget-title">Price Range</h3>
        <form class="mg-price-range-slider" method="post" data-start-min="250" data-start-max="650" data-min="0" data-max="1000" data-step="1">
            <div class="ui-range-slider mt-3"></div>
            <footer class="ui-range-slider-footer">
                <div class="column">
                    <button class="btn btn-outline-orangered btn-sm" type="submit">@WebStore.Resources.Buttons.Filter</button>
                </div>
                <div class="column">
                    <div class="ui-range-values">
                        <div class="ui-range-value-min">
                            $<span>250</span>&nbsp;-&nbsp;
                            <input type="hidden" value="250">
                        </div>
                        <div class="ui-range-value-max">
                            $<span>650</span>
                            <input type="hidden" value="650">
                        </div>
                    </div>
                </div>
            </footer>
        </form>
    </section>

    <section class="mg-widget">
        <h3 class="mg-widget-title">Filter by Price</h3>
        <div class="custom-control custom-checkbox">
            <input class="chk-col-deep-orange filled-in" type="checkbox" id="low">
            <label for="low">$50 - $100L&nbsp;<span class="text-muted">(208)</span></label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="chk-col-deep-orange filled-in" type="checkbox" id="middle">
            <label for="middle">$100L - $500&nbsp;<span class="text-muted">(311)</span></label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="chk-col-deep-orange filled-in" type="checkbox" id="high">
            <label for="high">$500 - $1,000&nbsp;<span class="text-muted">(485)</span></label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="chk-col-deep-orange filled-in" type="checkbox" id="top">
            <label for="top">$1,000 - $5,000&nbsp;<span class="text-muted">(213)</span></label>
        </div>
    </section>

    <section class="mg-widget">
        <h3 class="mg-widget-title">Filter by Brand</h3>
        <div class="custom-control custom-checkbox">
            <input class="chk-col-deep-orange filled-in" type="checkbox" id="apple">
            <label for="apple">Apple&nbsp;<span class="text-muted">(254)</span></label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="chk-col-deep-orange filled-in" type="checkbox" id="bosh">
            <label for="bosh">Bosh&nbsp;<span class="text-muted">(39)</span></label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="chk-col-deep-orange filled-in" type="checkbox" id="canon">
            <label for="canon">Canon Inc.&nbsp;<span class="text-muted">(128)</span></label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="chk-col-deep-orange filled-in" type="checkbox" id="dell">
            <label for="dell">Dell&nbsp;<span class="text-muted">(310)</span></label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="chk-col-deep-orange filled-in" type="checkbox" id="hewlet">
            <label for="hewlet">Hewlett-Packard&nbsp;<span class="text-muted">(42)</span></label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="chk-col-deep-orange filled-in" type="checkbox" id="hitachi">
            <label for="hitachi">Hitachi&nbsp;<span class="text-muted">(217)</span></label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="chk-col-deep-orange filled-in" type="checkbox" id="lg">
            <label for="lg">LG Electronics&nbsp;<span class="text-muted">(310)</span></label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="chk-col-deep-orange filled-in" type="checkbox" id="panasonic">
            <label for="panasonic">Panasonic&nbsp;<span class="text-muted">(74)</span></label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="chk-col-deep-orange filled-in" type="checkbox" id="siemens">
            <label for="siemens">Siemens&nbsp;<span class="text-muted">(86)</span></label>
        </div>
    </section>
</aside>
@section Scripts{
<script type="text/javascript">
    $(function () {
        $.AdminJs.slider.activate();
    })
</script>
}