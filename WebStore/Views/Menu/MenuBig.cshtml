                    <li class="nav-item mg-li-social dropdown">
                        <a class="nav-link" href="@Url.Action("Quote", "User", new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName }, null)" data-toggle="tooltip" data-title="Cotizar" data-original-title="Cotizar">
