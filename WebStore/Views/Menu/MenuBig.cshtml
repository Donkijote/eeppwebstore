                            <span>@ViewBag.Quotings</span>
                            <span class="mg-navbar-compare">
                                
                                @if (Model.Notification.Quotings > 0)
                                {
                                    <span class="mg-count-label">@Model.Notification.Quotings</span>
                                }
                            </span>
                        </a>
                    </li>

                    <li class="nav-item mg-li-social mg-shopping-cart dropdown">
                        <a id="CartCount" class="nav-link" href="@Url.Action("Cart", "User", new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName }, null)">
                            <i class="fas fa-shopping-cart"></i>
                            @{
                                if (Model.Notification.Cart > 0)
                                {
                                    <span class="mg-navbar-cart">
                                        <span class="mg-count-label">@Model.Notification.Cart</span>
                                    </span>
                                }
                            }

                        </a>
                        <div class="mg-toolbar-dropdown mg-cart-dropdown mg-widget-cart mg-hidden-on-mobile" id="CartItems">
                            @{ if (Model.ProductList != null)
                                {
                                    foreach (var i in Model.ProductList)
                                    {
                                        <div class="entry">
                                            <div class="entry-thumb">
                                                <a href="shop-single.html">
                                                    <img src="~/Content/img/products/@i.Code-1.jpg" alt="Product">
                                                </a>
                                            </div>
                                            <div class="entry-content">
                                                <h4 class="entry-title">
                                                    <a href="@Url.Action("Category", "Product", new { id = i.Category, idp = i.Code, language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName})">@i.Name</a>
                                                </h4>
                                                @{
                                                    if (i.PriceOffInt > 0)
                                                    {
                                                        <span class="entry-meta"><del>@i.Price</del> <span class="text-success">@i.PercentageOff DCTO</span></span>
                                                        <span class="entry-meta">@i.Quantity x $@i.PriceOff</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="entry-meta">@i.Quantity x $@i.Price</span>
                                                    }
                                                }
                                            </div>
                                            <a class="entry-delete removeItemFromCart" data-id="@i.Code" href="javascript:void(0);">
                                                <i class="fas fa-times"></i>
                                            </a>
                                        </div>
                                        }
                                    int total = 0;
                                    foreach (var i in Model.ProductList)
                                    {
                                        total += i.TotalInt;
                                    }
                                    <div class="text-right">
                                        <p class="text-gray-dark py-2 mb-0">
                                            <span class="text-muted">Total Neto (sin IVA):</span> &nbsp;$@total.ToString("N0", System.Threading.Thread.CurrentThread.CurrentCulture)
                                        </p>
                                    </div>
                                    <div class="d-flex">
                                        <div class="pr-2 w-50">
                                            <a href="@Url.Action("Cart", "User", new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName })" style="text-decoration:none;">
                                                <div class="btn btn-secondary btn-sm btn-block mb-0">@WebStore.Resources.Buttons.ShowCart</div>
                                            </a>
                                        </div>
                                        <div class="pl-2 w-50">
                                            <a href="@Url.Action("CheckOut", "User", new { language = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName })" style="text-decoration:none;">
                                                <div class="btn btn-orangered btn-sm btn-block mb-0">@WebStore.Resources.Buttons.Checkout</div>
                                            </a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <h5>Carrito vacío.</h5>
                                }
                            }
                        </div>
